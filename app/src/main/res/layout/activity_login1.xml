<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Login1">

    <ImageView
        android:id="@+id/sbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/status_bar"
        android:layout_alignParentTop="true"
        >
    </ImageView>

    <TextView
        android:id="@+id/tt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Socially"
        android:textSize="50dp"
        android:fontFamily="@font/red_hat"
        android:textStyle="bold"
        android:layout_centerInParent="true"
        android:layout_below="@id/sbar"
        android:layout_marginTop="150dp"
        android:textColor="@color/theme"
        >
    </TextView>

    <de.hdodenhof.circleimageview.CircleImageView
        android:src="@drawable/login1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@id/tt1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:id="@+id/dp"/>

    <TextView
        android:id="@+id/tt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="jacob_w"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_centerInParent="true"
        android:layout_marginTop="8dp"
        android:layout_below="@id/dp"

        />


    <TextView
        android:id="@+id/Loginbtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/rect_button"
        android:text="Log in"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_below="@id/tt2"
        android:paddingTop="12dp"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:clickable="true"/>

    <TextView
        android:id="@+id/switchacc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Switch accounts"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_centerInParent="true"
        android:layout_marginTop="27dp"
        android:textColor="@color/theme"
        android:layout_below="@id/Loginbtn"

        />

    <LinearLayout
        android:id="@+id/line"
        android:layout_width="500dp"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/ll1"
        android:layout_marginBottom="-80dp"
        android:orientation="horizontal" />


    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="41dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/tt4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have an account?"
            android:textSize="13dp"
            android:layout_marginTop="90dp"
            android:textColor="@color/theme" />

        <TextView
            android:id="@+id/tt5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Sign up."
            android:textSize="13dp"
            android:textColor="@color/theme"
            android:textStyle="bold"
            android:layout_marginTop="90dp"
            android:clickable="true"
            >
        </TextView>
    </LinearLayout>



    <ImageView
        android:id="@+id/bbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:elevation="40dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/bottom_bar">

    </ImageView>

</RelativeLayout>