                                android:textSize="15sp"
                                android:layout_marginLeft="5dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="started"
                                android:gravity="center_vertical"
                                android:textSize="15sp"
                                android:layout_marginLeft="5dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:weightSum="2"
                            android:orientation="horizontal"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="following you. "
                                android:gravity="center_vertical"
                                android:layout_marginLeft="5dp"
                                android:textSize="15sp"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="3d"
                                android:gravity="center_vertical"
                                android:textColor="@color/story_prog"
                                android:textSize="15sp"
                                />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:gravity="center"
                            android:text="Message"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:background="@drawable/rect_buttonw"
                            android:layout_gravity="center_vertical"
                            />

                    </LinearLayout>


                </LinearLayout>


            </RelativeLayout>
        </ScrollView>


        <LinearLayout
            android:id="@+id/bnav"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_above="@id/bbar"
            android:orientation="horizontal"
            android:weightSum="5"
            android:layout_marginBottom="15dp"
            >
            <ImageView
                android:id="@+id/home"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/home"
                android:scaleType="center"
                />
            <ImageView
                android:id="@+id/feed"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/search"
                app:tint="@color/theme"
                android:scaleType="center"
                />
            <ImageView
                android:id="@+id/upload"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/create"
                android:scaleType="center"
                />
            <ImageView

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/flike"
                app:tint="@color/theme"
                android:scaleType="center"
                />
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/userpf"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/login1"
                    android:padding="12dp"
                    />
            </RelativeLayout>


        </LinearLayout>

        <ImageView
            android:id="@+id/bbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:elevation="40dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/bottom_bar"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>