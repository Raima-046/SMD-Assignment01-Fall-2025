<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Login2">

    <ImageView
        android:id="@+id/sbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/status_bar"
        android:layout_alignParentTop="true"
        >
    </ImageView>

    <ImageView
        android:id="@+id/back"
        android:layout_width="30dp"
        android:layout_height="27dp"
        android:layout_below="@+id/sbar"
        android:src="@drawable/back"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="12dp"
        >
    </ImageView>

    <TextView
        android:id="@+id/tt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Socially"
        android:textSize="50dp"
        android:fontFamily="@font/red_hat"
        android:textStyle="bold"
        android:layout_centerInParent="true"
        android:layout_below="@id/sbar"
        android:layout_marginTop="90dp"
        android:textColor="@color/theme"
        >
    </TextView>


    <EditText
        android:id="@+id/et1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/rect_button"
        android:layout_below="@id/tt1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="#f8f8f8"
        android:text="asad_khasanov"
        android:paddingLeft="15dp"
        >
    </EditText>

    <EditText
        android:id="@+id/et2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/rect_button"
        android:layout_below="@id/et1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/follow"
        android:hint="Password"
        android:paddingLeft="15dp"
        >
    </EditText>

    <TextView
        android:id="@+id/tt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et2"
        android:text="Forgot password?"
        android:textStyle="bold"
        android:textColor="#b58c90"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:layout_marginRight="20dp"
        />

    <TextView
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/rect_button"
        android:text="Log in"
        android:backgroundTint="@color/loginUnClicked"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_below="@id/tt2"
        android:paddingTop="12dp"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_marginTop="19dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>

    <LinearLayout
        android:id="@+id/orLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_below="@id/btn"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">

        <!--left line-->
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="#CCCCCC" />

        <!--OR text-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OR"
            android:textStyle="bold"
            android:textColor="#9c9091"
            android:textSize="15sp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"/>

        <!--right line-->
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="#CCCCCC" />

    </LinearLayout>



    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/line"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="170dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tt4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:text="Don't have an account?"
            android:textColor="#9c9091"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/tt5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:clickable="true"
            android:text=" Sign up."
            android:textColor="#b58c90"
            android:textSize="13dp"
            >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/line"
        android:layout_width="500dp"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_above="@id/ttlast"
        android:orientation="horizontal" />

    <TextView
        android:id="@+id/ttlast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Socially"
        android:textSize="18dp"
        android:fontFamily="@font/red_hat"
        android:textStyle="bold"
        android:layout_centerInParent="true"
        android:layout_above="@id/bbar"
        android:textColor="@color/theme"
        android:layout_marginBottom="7dp"
        >
    </TextView>


    <ImageView
        android:id="@+id/bbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:elevation="40dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/bottom_bar">

    </ImageView>

</RelativeLayout>