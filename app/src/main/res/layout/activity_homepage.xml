<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Homepage">

    <ImageView
        android:id="@+id/sbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/status_bar"
        android:layout_alignParentTop="true"
        >
    </ImageView>

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_below="@id/sbar"
        android:weightSum="5"
        >

        <!--cam-->
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/camb"
            android:layout_gravity="left"

             />

        <!--Socially text-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Socially"
            android:fontFamily="@font/red_hat"
            android:textStyle="bold"
            android:textColor="@color/theme"
            android:layout_weight="2"

            android:textAlignment="center"
            android:textSize="15sp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"/>


        <!--cam-->
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/live"
            android:layout_gravity="left"

            />

        <!--share-->
        <ImageView
            android:id="@+id/dm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/share"
            android:layout_gravity="left"
            android:clickable="true"

            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/line2"
        android:layout_width="500dp"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:layout_below="@id/ll1"
        android:orientation="horizontal" />

    <LinearLayout
        android:id="@+id/line3"
        android:layout_width="500dp"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        android:layout_centerHorizontal="true"

        android:layout_below="@id/stories"
        android:orientation="horizontal" />

    <LinearLayout
        android:id="@+id/line"
        android:layout_width="500dp"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        android:layout_centerHorizontal="true"

        android:layout_above="@id/bbar"
        android:orientation="horizontal" />

    <LinearLayout
        android:id="@+id/stories"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/line2"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:weightSum="4"
        android:layout_marginTop="3dp"
        android:paddingBottom="3dp"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/jacob"
            android:layout_gravity="left"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/karen"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/zack"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/kier"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bnavbar"
        android:layout_below="@id/stories"
        android:weightSum="8"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:orientation="horizontal"
            android:weightSum="5">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:src="@drawable/joshua"
                android:padding="5dp"
                android:layout_marginLeft="8dp"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.5"
                android:weightSum="2"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:weightSum="4"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/josh"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.2"
                        android:text="joshua_I"
                        android:textStyle="bold"
                        android:paddingLeft="8dp"
                        android:gravity="bottom"
                        />
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:src="@drawable/verif"

                        android:layout_gravity="bottom"
                        android:paddingTop="7dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="7dp"

                        />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Tokyo, Japan"
                    android:paddingLeft="8dp"
                    />

            </LinearLayout>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/more"
                android:layout_weight="1"
                android:scaleType="center"

                />

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/img"
                android:layout_gravity="center"
                android:scaleType="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1/3"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:padding="5dp"
                android:layout_gravity="top|end"
                android:layout_margin="10dp" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:orientation="horizontal"
            android:weightSum="6"
            >
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/like"
                android:scaleType="center"
                android:layout_marginLeft="-13dp"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/comm"
                android:scaleType="center"
                android:layout_marginLeft="-40dp"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/share"
                android:scaleType="center"
                android:layout_marginLeft="-45dp"
                app:tint="@color/black" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:src="@drawable/scroll"
                android:paddingRight="80dp"
                android:scaleType="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                 />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/save"
                android:scaleType="center"
                android:layout_marginRight="-8dp"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:weightSum="5"
            android:orientation="horizontal"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:src="@drawable/img_1"
                android:padding="2dp"
                android:layout_marginLeft="15dp"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.73"
                android:layout_marginLeft="5dp"
                android:text="Liked by"
                android:textSize="13sp"
                android:gravity="center_vertical"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.91"
                android:text="craig_love"
                android:textStyle="bold"
                android:textSize="13sp"
                android:gravity="center_vertical"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.34"
                android:text="and"
                android:textSize="13sp"
                android:gravity="center_vertical"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="44,686 others"
                android:textStyle="bold"
                android:textSize="13sp"
                android:gravity="center_vertical"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="2"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="2"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.34"
                    android:layout_marginLeft="15dp"
                    android:text="joshua_I"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:gravity="center_vertical"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.65"
                    android:text="The game in Japan was amazing and I"
                    android:textSize="15sp"
                    android:gravity="center_vertical"
                    />

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="15sp"
                android:text="want to share some photos"
                android:textSize="15sp"
                />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/bnavbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@id/bbar"
        android:orientation="horizontal"
        android:weightSum="5"
        android:layout_marginBottom="15dp"
        >
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/fhome"
            android:scaleType="center"
            />
        <ImageView
            android:id="@+id/search"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/search"
            app:tint="@color/theme"
            android:scaleType="center"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/create"
            android:scaleType="center"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/like"
            app:tint="@color/theme"
            android:scaleType="center"
            />
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/userpf"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/login1"
                android:padding="12dp"
                />
        </RelativeLayout>


    </LinearLayout>

    <ImageView
        android:id="@+id/bbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:elevation="40dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/bottom_bar"/>

</RelativeLayout>